global:
  scrape_interval: 30s

  external_labels:
    aws_region: {{ aws_region }}
    build_version: {{ build_version }}
    commit_hash: {{ commit_hash }}
    environment: {{ environment_ }}

scrape_configs:
- job_name: node
  static_configs:
  - targets:
    - localhost:{{ node_exporter_port }}

- job_name: consul
  consul_sd_configs:
  - server: localhost:{{ consul_agent_port }}
    datacenter: {{ aws_region }}
